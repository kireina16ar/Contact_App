<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    Data contact tidak tersedia <br />
                    <a href="" class="alert-link fw-normal">&laquo;Kembali ke Daftar Contact</a>
                </div>                  
            <% } else { %>

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %></h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= contact.nomor %></h6>
                  <p class="card-text"><%= contact.email %></p>
                  <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge">Edit</a>
                  <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('Apakah kamu ingin menghapus kontak ini?')">Hapus</a>
                  <a href="/contact" class="card-link d-block mt-2">&laquo;Kembali ke Daftar Contact</a>
                </div>
              </div>
            <% } %>
        </div>
    </div>
</div>